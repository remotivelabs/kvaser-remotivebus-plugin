# Build system environment variables
# This file defines the interface contract between build components

# Package metadata
export PACKAGE_NAME=kvaser-remotivebus-plugin

# Source paths
export SRC_PKG_COMMON=distribution/common

# Build output base paths
export OUT_BUILD_BASE=build                                 # Root build output directory
export OUT_INTERMEDIATE_BASE=$OUT_BUILD_BASE/intermediate   # Temporary build files, caches
export OUT_BIN_BASE=$OUT_BUILD_BASE/bin                     # Final executable binaries
export OUT_LIB_BASE=$OUT_BUILD_BASE/lib                     # Final shared libraries
export OUT_PACKAGES_BASE=$OUT_BUILD_BASE/pkgs               # Final distributable packages
export OUT_INSTALL_BASE=$OUT_BUILD_BASE/installer           # Installer files

# Cargo build configuration
# Respects OUT_LIB_BASE by default. Use KVASER_LIB_PATH to override with externally installed libraries.
# KVASER_LIB_PATH=/usr/lib  # Direct override (skips OUT_LIB_BASE/<arch>)
